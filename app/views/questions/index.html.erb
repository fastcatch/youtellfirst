<h1>Questions You Asked</h1>

<table id='questions' class='table table-striped table-hover'>
  <thead>
    <tr>
      <th class='question'>Question</th>
      <th class='answers'>Answers</th>
      <th class='status'>Status</th>
      <th class='asked-at'>Asked</th>
      <th class='actions'></th>
    </tr>
  </thead>

  <tbody>
  <% @questions.each do |question| %>
    <tr>
      <td class='question'><%= question.text %></td>
      <td class='answers'>
        <% total = question.answers.count %>
        <% pending = question.answers.pending.count %>
        <% if pending == 0 %>
          all received
        <% else -%>
          <%= "#{total-pending} recevied" %>, <%= "#{pending} pending" %>
        <% end -%>
      </td>
      <td class='status'><%= formatted_status(question) %></td>
      <td class='asked-at'><small><%= time_ago_in_words(question.created_at) %> ago</small></td>
      <td class='actions'><%= link_to 'Details', question %></td>
    </tr>
  <% end %>
  </tbody>
</table>
